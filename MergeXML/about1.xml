<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@drawable/main_background">
		<TextView
			android:id="@+id/TEXT_ABOUT_APP_NAME"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:textColor="#3C3C3C"
			android:focusable="false"
			android:textSize="15dp"
			android:layout_marginTop="22dip"
			android:layout_marginLeft="16dip"
			android:focusableInTouchMode="false"
			android:clickable="false"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/TEXT_ABOUT_APP_NAME_VALUE"
			android:focusable="true"
			android:textSize="15dp"
			android:layout_marginTop="5dip"
			android:layout_marginLeft="16dip"
			android:focusableInTouchMode="false"
			android:textColor="#4B4B4B"
			android:clickable="false"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/TEXT_ABOUT_APP_VERSION"
			android:textStyle="bold"
			android:textColor="#3C3C3C"
			android:focusable="false"
			android:textSize="15dp"
			android:layout_marginTop="10dip"
			android:layout_marginLeft="16dip"
			android:focusableInTouchMode="false"
			android:clickable="false"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/TEXT_ABOUT_APP_VERSION_VALUE"
			android:focusable="true"
			android:textColor="#4B4B4B"
			android:textSize="15dp"
			android:layout_marginLeft="16dip"
			android:focusableInTouchMode="false"
			android:clickable="false"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/TEXT_ABOUT_TECH_SUPPORT"
			android:textStyle="bold"
			android:textColor="#3C3C3C"
			android:focusable="false"
			android:textSize="15dp"
			android:layout_marginTop="21dip"
			android:layout_marginLeft="16dip"
			android:focusableInTouchMode="false"
			android:clickable="false"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/TEXT_ABOUT_TECH_SUPPORT_VALUE"
			android:textSize="15dp"
			android:textColor="#3559F8"
			android:layout_marginTop="4dip"
			android:layout_marginLeft="16dip"
			android:focusableInTouchMode="true"
			android:clickable="true"
			android:linksClickable="true"
			android:onClick="sendEmail"/>
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/TEXT_SEND_FEEDBACK"
			android:textSize="15dp"
			android:textColor="#3559F8"
			android:layout_marginTop="4dip"
			android:layout_marginLeft="16dip"
			android:focusableInTouchMode="true"
			android:clickable="true"
			android:linksClickable="true"
			android:onClick="sendFeedback"/>
		
</LinearLayout>
